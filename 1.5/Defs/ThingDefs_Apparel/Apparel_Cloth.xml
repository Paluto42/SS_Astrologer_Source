<Defs>

    <ThingDef Name="Astro_ClothBase" ParentName="Astro_ApparelBase" Abstract="True">
        <thingCategories Inherit="false">
            <li>LOF_AS_Category_Cloth</li>
        </thingCategories>
        <recipeMaker>
            <researchPrerequisite>LOF_Research_BaseCloth</researchPrerequisite>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Tailor</effectWorking>
            <soundWorking>Recipe_Tailor</soundWorking>
            <recipeUsers>
                <li>ElectricTailoringBench</li>
                <li>HandTailoringBench</li>
            </recipeUsers>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
            <defaultIngredientFilter>
                <categories>
                    <li>Root</li>
                </categories>
                <disallowedThingDefs>
                    <li>Gold</li>
                    <li>Silver</li>
                    <li>Plasteel</li>
                    <li>Jade</li>
                    <li>Uranium</li>
                    <li MayRequire="Ludeon.RimWorld.Anomaly">Bioferrite</li>
                </disallowedThingDefs>
            </defaultIngredientFilter>
        </recipeMaker>
        <!--tradeTags>
            <li>Clothing</li>
        </tradeTags-->
    </ThingDef>

    <ThingDef ParentName="Astro_ClothBase">
        <defName>LOF_FrillOnepiece</defName>
        <label>连衣裙</label>
        <description>研究所人员统一配给的服装，轻便保暖，胸口烫印着繁星帝国的徽章\n基于占星师热爱探索的特质，穿戴连衣裙会增加研究速度.</description>
        <graphicData>
            <texPath>Things/Apparel/LOF_FrillOnepiece/FrillOnepiece</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <!--占位,原版数值-->
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToMake>2000</WorkToMake>
            <Mass>0.18</Mass>
            <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.22</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <ResearchSpeed>0.25</ResearchSpeed>
        </equippedStatOffsets>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
        <costStuffCount>40</costStuffCount>
        <apparel>
            <wornGraphicPath>Things/Apparel/LOF_FrillOnepiece/FrillOnepiece</wornGraphicPath>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <!--li>Legs</li-->
            </bodyPartGroups>
            <layers>
                <li>OnSkin</li>
            </layers>
            <defaultOutfitTags>
                <li>Worker</li>
            </defaultOutfitTags>
            <tags>
                <li>Astrologer_CitizenCloth</li>
            </tags>
        </apparel>
    </ThingDef>

