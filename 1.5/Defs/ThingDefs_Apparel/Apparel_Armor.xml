    <!-- ERT-EMT应急反应护服 -->
    <ThingDef ParentName="Astrologer_ArmorBase">
        <defName>Astrologer_EmergencyArmor</defName>
        <label>ERT-EMT应急反应护服</label>
        <description>ERT-EMT应急反应护服 desc.</description>
        <tickerType>Normal</tickerType>
        <!--等待贴图-->
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/ReconArmor/ReconArmor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <!--占位,原版数值-->
        <statBases>
            <MaxHitPoints>260</MaxHitPoints>
            <WorkToMake>6000</WorkToMake>
            <Mass>6</Mass>
            <ArmorRating_Sharp>0.92</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
            <ArmorRating_Heat>0.46</ArmorRating_Heat>
            <Insulation_Cold>32</Insulation_Cold>
            <Insulation_Heat>9</Insulation_Heat>
            <EquipDelay>6</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>0.5</MoveSpeed>
            <MentalBreakThreshold>-0.35</MentalBreakThreshold>
        </equippedStatOffsets>
        <!--大跳没写 救援没写-->
        <verbs>
            <li>
                <verbClass>Verb_FirefoamPop</verbClass>
                <label>喷射泡沫灭火剂</label>
                <violent>false</violent>
                <hasStandardCommand>true</hasStandardCommand>
                <targetable>false</targetable>
                <nonInterruptingSelfCast>true</nonInterruptingSelfCast>
                <onlyManualCast>True</onlyManualCast>
            </li>
        </verbs>
        <comps>
            <li Class="CompProperties_ApparelReloadable">
                <maxCharges>5</maxCharges>
                <ammoDef>Chemfuel</ammoDef>
                <ammoCountPerCharge>40</ammoCountPerCharge>
                <baseReloadTicks>60</baseReloadTicks>
                <soundReload>Standard_Reload</soundReload>
                <hotKey>Misc4</hotKey>
                <chargeNoun>incendiary</chargeNoun>
                <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
            </li>
            <li Class="CompProperties_Explosive">
                <explosiveRadius>4.9</explosiveRadius>
                <explosiveDamageType>Extinguish</explosiveDamageType>
                <startWickHitPointsPercent>0</startWickHitPointsPercent>
                <chanceNeverExplodeFromDamage>1</chanceNeverExplodeFromDamage>                <!-- Player or AI toggled. Otherwise it won't use a charge. -->
                <postExplosionSpawnThingDef>Filth_FireFoam</postExplosionSpawnThingDef>
                <postExplosionSpawnChance>1</postExplosionSpawnChance>
                <postExplosionSpawnThingCount>3</postExplosionSpawnThingCount>
                <applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
                <explosionEffect>ExtinguisherExplosion</explosionEffect>
                <explosionSound>Explosion_FirefoamPopPack</explosionSound>
                <wickTicks>0</wickTicks>
                <destroyThingOnExplosionSize>9999</destroyThingOnExplosionSize>                <!--hack to not destroy on explosion-->
            </li>
        </comps>
        <!--材料-->
        <costList>
            <Cloth>40</Cloth>
            <Steel>80</Steel>
        </costList>
        <apparel>
            <wornGraphicPath>Things/Pawn/Humanlike/Apparel/ReconArmor/ReconArmor</wornGraphicPath>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>Middle</li>
                <li>Shell</li>
            </layers>
        </apparel>
        <recipeMaker>
            <!--researchPrerequisite>ComplexClothing</researchPrerequisite-->
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
            <displayPriority>1000</displayPriority>
        </recipeMaker>
    </ThingDef>

