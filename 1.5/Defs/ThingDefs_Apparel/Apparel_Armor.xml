<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef Name="Astro_ArmorBase" ParentName="Astro_ApparelBase" Abstract="True">
        <thingCategories Inherit="false">
            <li>LOF_AS_Category_Armor</li>
        </thingCategories>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>Middle</li>
                <li>Shell</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <recipeMaker>
            <researchPrerequisite>LOF_Research_BaseArmor</researchPrerequisite>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Smith</soundWorking>
            <recipeUsers>
                <li>LOF_FabricationBench</li>
            </recipeUsers>
            <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
            <defaultIngredientFilter>
                <categories>
                    <li>Root</li>
                </categories>
                <disallowedThingDefs>
                    <li>Gold</li>
                    <li>Silver</li>
                    <li>Plasteel</li>
                    <li>Jade</li>
                    <li>Uranium</li>
                    <li MayRequire="Ludeon.RimWorld.Anomaly">Bioferrite</li>
                </disallowedThingDefs>
            </defaultIngredientFilter>
        </recipeMaker>
    </ThingDef>

    <ThingDef ParentName="Astro_ArmorBase">
        <defName>LOF_Apparel_LightArmor</defName>
        <label>&lt;color=#00AEEF&gt;生存作战轻甲&lt;/color&gt;</label>
        <description>轻量化全能型作战服，较高的锐防和普通的钝防.\n能够监控并介入穿戴者的血液循环过程,增强生存能力和战斗持久力</description>
        <graphicData>
            <texPath>Things/Apparel/LOF_LightArmor/LightArmor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.25</uiIconScale>
        <!--占位,原版数值-->
        <statBases>
            <MaxHitPoints>260</MaxHitPoints>
            <WorkToMake>6000</WorkToMake>
            <Mass>6</Mass>
            <ArmorRating_Sharp>0.92</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
            <ArmorRating_Heat>0.46</ArmorRating_Heat>
            <Insulation_Cold>20</Insulation_Cold>
            <Insulation_Heat>9</Insulation_Heat>
            <EquipDelay>6</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>0.5</MoveSpeed>
        </equippedStatOffsets>
        <comps>
            <li Class="Astrologer.TCP_AddHediff">
                <hediff>LOF_Hediff_Detoxifier</hediff>
            </li>
        </comps>
        <costList>
            <Cloth>40</Cloth>
            <LOF_Thing_StarlightIron>60</LOF_Thing_StarlightIron>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
        <apparel>
            <wornGraphicPath>Things/Apparel/LOF_LightArmor/LightArmor</wornGraphicPath>
            <tags>
                <li>Astrologer_SoldierArmor</li>
            </tags>
        </apparel>
        <recipeMaker>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
            <displayPriority>1000</displayPriority>
        </recipeMaker>
    </ThingDef>

    <ThingDef ParentName="Astro_ArmorBase">
        <defName>LOF_Apparel_StandardArmor</defName>
        <label>&lt;color=#00AEEF&gt;"MPE-3" 制式装甲&lt;/color&gt;</label>
        <description>"MPE-3"制式装甲，可以发射动能火箭弹(需要装填钢铁),但是精度较低.</description>
        <!--等待贴图-->
        <graphicData>
            <texPath>Things/Apparel/LOF_StandardArmor/StandardArmor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <!--占位,原版数值-->
        <statBases>
            <MaxHitPoints>260</MaxHitPoints>
            <WorkToMake>6000</WorkToMake>
            <Mass>6</Mass>
            <ArmorRating_Sharp>0.92</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
            <ArmorRating_Heat>0.46</ArmorRating_Heat>
            <Insulation_Cold>32</Insulation_Cold>
            <Insulation_Heat>9</Insulation_Heat>
            <EquipDelay>6</EquipDelay>
        </statBases>
        <!--暂时套皇权的凤凰装甲-->
        <verbs>
            <li>
                <label>发射动能火箭弹</label>
                <verbClass>Verb_LaunchProjectileStatic</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <onlyManualCast>True</onlyManualCast>
                <range>40</range>
                <forcedMissRadius>5.9</forcedMissRadius>
                <warmupTime>1.5</warmupTime>
                <noiseRadius>4</noiseRadius>
                <soundCast>Shot_IncendiaryLauncher</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>14</muzzleFlashScale>
                <drawHighlightWithLineOfSight>true</drawHighlightWithLineOfSight>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                </targetParams>
                <!--defaultProjectile>Proj_GrenadePhoenixFire</defaultProjectile-->
                <defaultProjectile>LOF_Bullet_TandemHEAT</defaultProjectile>
                <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
            </li>
        </verbs>
        <comps>
            <li Class="CompProperties_ApparelReloadable">
                <maxCharges>5</maxCharges>
                <ammoDef>Steel</ammoDef>
                <ammoCountPerCharge>40</ammoCountPerCharge>
                <baseReloadTicks>60</baseReloadTicks>
                <soundReload>Standard_Reload</soundReload>
                <!--hotKey>Misc4</hotKey-->
                <chargeNoun>steel</chargeNoun>
                <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
            </li>
        </comps>
        <costList>
            <Cloth>40</Cloth>
            <LOF_Thing_StarlightIron>120</LOF_Thing_StarlightIron>
            <ComponentIndustrial>10</ComponentIndustrial>
        </costList>
        <apparel>
            <wornGraphicPath>Things/Apparel/LOF_StandardArmor/StandardArmor</wornGraphicPath>
            <layers>
                <li>OnSkin</li>
            </layers>
        </apparel>
        <recipeMaker>
            <researchPrerequisite>LOF_Research_SeriesArmor_MPE</researchPrerequisite>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
            <displayPriority>1000</displayPriority>
        </recipeMaker>
    </ThingDef>

    <ThingDef ParentName="Astro_ArmorBase">
        <defName>LOF_Apparel_MiningArmor</defName>
        <label>&lt;color=#00AEEF&gt;MI矿业支持设备&lt;/color&gt;</label>
        <description>远距离采矿装甲，能够有效提升负重。</description>
        <tickerType>Normal</tickerType>
        <graphicData>
            <texPath>Things/Apparel/LOF_MiningArmor/MiningArmor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <!--占位,原版数值-->
        <statBases>
            <MaxHitPoints>260</MaxHitPoints>
            <WorkToMake>6000</WorkToMake>
            <Mass>6</Mass>
            <ArmorRating_Sharp>0.92</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
            <ArmorRating_Heat>0.46</ArmorRating_Heat>
            <Insulation_Cold>24</Insulation_Cold>
            <Insulation_Heat>8</Insulation_Heat>
            <EquipDelay>6</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <CarryingCapacity>10</CarryingCapacity>
            <DeepDrillingSpeed>3</DeepDrillingSpeed>
            <MiningSpeed>3</MiningSpeed>
        </equippedStatOffsets>
        <!--要飞行comp-->
