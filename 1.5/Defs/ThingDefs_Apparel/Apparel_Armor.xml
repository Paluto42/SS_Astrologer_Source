        </apparel>
        <recipeMaker>
            <researchPrerequisite>LOF_Research_MultiArmor</researchPrerequisite>
            <skillRequirements>
                <Crafting>7</Crafting>
            </skillRequirements>
            <displayPriority>1000</displayPriority>
        </recipeMaker>
    </ThingDef>

    <ThingDef ParentName="Astro_ArmorBase">
        <defName>LOF_Apparel_EmergencyArmor</defName>
        <label>&lt;color=#00AEEF&gt;ERT-EMT应急反应护服&lt;/color&gt;</label>
        <description>ERT-EMT应急反应护服 desc.</description>
        <tickerType>Normal</tickerType>
        <graphicData>
            <texPath>Things/Apparel/LOF_EmergencyArmor/EmergencyArmor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <!--占位,原版数值-->
        <statBases>
            <MaxHitPoints>260</MaxHitPoints>
            <WorkToMake>6000</WorkToMake>
            <Mass>6</Mass>
            <ArmorRating_Sharp>0.92</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
            <ArmorRating_Heat>0.46</ArmorRating_Heat>
            <Insulation_Cold>32</Insulation_Cold>
            <Insulation_Heat>32</Insulation_Heat>
            <EquipDelay>6</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>1</MoveSpeed>
            <MentalBreakThreshold>-0.25</MentalBreakThreshold>
            <MedicalPotency>0.5</MedicalPotency>
            <MedicalSurgerySuccessChance>0.5</MedicalSurgerySuccessChance>
        </equippedStatOffsets>
        <verbs>
            <li>
                <verbClass>Verb_FirefoamPop</verbClass>
                <label>喷射泡沫灭火剂</label>
                <violent>false</violent>
                <hasStandardCommand>true</hasStandardCommand>
                <targetable>false</targetable>
                <nonInterruptingSelfCast>true</nonInterruptingSelfCast>
                <onlyManualCast>True</onlyManualCast>
            </li>
        </verbs>
        <comps>
            <li Class="CompProperties_ApparelReloadable">
                <maxCharges>5</maxCharges>
                <ammoDef>Chemfuel</ammoDef>
                <ammoCountPerCharge>40</ammoCountPerCharge>
                <baseReloadTicks>60</baseReloadTicks>
                <soundReload>Standard_Reload</soundReload>
                <hotKey>Misc4</hotKey>
                <chargeNoun>incendiary</chargeNoun>
                <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
            </li>
            <li Class="CompProperties_Explosive">
                <explosiveRadius>4.9</explosiveRadius>
                <explosiveDamageType>Extinguish</explosiveDamageType>
                <startWickHitPointsPercent>0</startWickHitPointsPercent>
                <chanceNeverExplodeFromDamage>1</chanceNeverExplodeFromDamage>                <!-- Player or AI toggled. Otherwise it won't use a charge. -->
                <postExplosionSpawnThingDef>Filth_FireFoam</postExplosionSpawnThingDef>
                <postExplosionSpawnChance>1</postExplosionSpawnChance>
                <postExplosionSpawnThingCount>3</postExplosionSpawnThingCount>
                <applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
                <explosionEffect>ExtinguisherExplosion</explosionEffect>
                <explosionSound>Explosion_FirefoamPopPack</explosionSound>
                <wickTicks>0</wickTicks>
                <destroyThingOnExplosionSize>9999</destroyThingOnExplosionSize>                <!--hack to not destroy on explosion-->
            </li>
            <li Class="AKA_Ability.TCP_AKATracker">
                <trackerGenProp>
                    <abilities>
                        <li>LOF_Ability_ReloadFromThing</li>
                        <li>LOF_Ability_Coagulate</li>
                        <li>LOF_Ability_Skip</li>
                    </abilities>
                    <sharedDataProperty Class="AKA_Ability.SharedData.SDP_SharedCharge">
                        <sharedDataType>AKA_Ability.SharedData.SD_SharedCharge</sharedDataType>
                        <cooldownProperty>
                            <maxCharge>5</maxCharge>
                        </cooldownProperty>
                    </sharedDataProperty>
                </trackerGenProp>
            </li>
        </comps>
        <costList>
            <Cloth>40</Cloth>
            <LOF_Thing_StarlightIron>60</LOF_Thing_StarlightIron>
            <ComponentIndustrial>5</ComponentIndustrial>
        </costList>
        <apparel>
            <wornGraphicPath>Things/Apparel/LOF_EmergencyArmor/EmergencyArmor</wornGraphicPath>
        </apparel>
        <recipeMaker>
            <researchPrerequisite>LOF_Research_MultiArmor</researchPrerequisite>
            <skillRequirements>
                <Crafting>7</Crafting>
            </skillRequirements>
            <displayPriority>1000</displayPriority>
        </recipeMaker>
    </ThingDef>

