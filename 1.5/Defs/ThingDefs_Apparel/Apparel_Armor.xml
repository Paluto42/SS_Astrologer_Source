            <li Class="AKA_Ability.TCP_AKATracker">
                <trackerGenProp>
                    <abilities>
                        <li>LOF_Ability_Fly</li>
                    </abilities>
                </trackerGenProp>
            </li>
        </comps>
        <costList>
            <Cloth>40</Cloth>
            <LOF_Thing_StarlightIron>100</LOF_Thing_StarlightIron>
            <ComponentIndustrial>4</ComponentIndustrial>
        </costList>
        <apparel>
            <wornGraphicPath>Things/Apparel/LOF_MiningArmor/MiningArmor</wornGraphicPath>
            <layers>
                <li>OnSkin</li>
