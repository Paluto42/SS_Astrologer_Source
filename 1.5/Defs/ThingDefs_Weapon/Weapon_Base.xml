<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef Name="Astro_BaseWeapon" Abstract="True" ParentName="BaseWeapon">
        <comps Inherit="false">
            <li Class="CompProperties_Forbiddable"/>
            <li Class="CompProperties_Styleable"/>
            <li>
                <compClass>CompEquippable</compClass>
            </li>
        </comps>
    </ThingDef>

    <ThingDef Name="Astro_MedievalWeaponBase" Abstract="True" ParentName="Astro_BaseWeapon">
        <techLevel>Medieval</techLevel>
        <smeltable>true</smeltable>
        <relicChance>0</relicChance>
        <inspectorTabs>
            <li>ITab_Art</li>
        </inspectorTabs>
        <statBases>
            <!--Flammability>0.5</Flammability-->
        </statBases>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Smith</soundWorking>
            <recipeUsers>
                <li>TableMachining</li>
            </recipeUsers>
            <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
        </recipeMaker>
        <tradeTags>
            <li>AstrologerWeapon</li>
        </tradeTags>
        <burnableByRecipe>true</burnableByRecipe>
    </ThingDef>

    <ThingDef Name="Astro_IndustrialWeaponBase" Abstract="True" ParentName="Astro_BaseWeapon">
        <techLevel>Industrial</techLevel>
        <smeltable>true</smeltable>
        <relicChance>0</relicChance>
        <!--留给近战武器burnableByRecipe>true</burnableByRecipe-->
        <inspectorTabs>
            <li>ITab_Art</li>
        </inspectorTabs>
        <statBases>
            <!--Flammability>0.5</Flammability-->
        </statBases>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Smith</soundWorking>
            <recipeUsers>
                <li>LOF_FabricationBench</li>
            </recipeUsers>
            <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
        </recipeMaker>
        <tradeTags>
            <li>AstrologerWeapon</li>
        </tradeTags>
    </ThingDef>

    <ThingDef Name="Astro_WeaponMeleeBase" Abstract="True" ParentName="Astro_MedievalWeaponBase">
        <thingCategories>
            <li>LOF_AS_Category_WeaponMelee</li>
        </thingCategories>
        <weaponClasses>
            <li>Melee</li>
            <li>MeleePiercer</li>
        </weaponClasses>
        <recipeMaker>
            <recipeUsers>
                <li>LOF_FabricationBench</li>
            </recipeUsers>
            <defaultIngredientFilter>
                <categories>
                    <li>Root</li>
                </categories>
                <disallowedThingDefs>
                    <li>Silver</li>
                    <li>Gold</li>
                    <li>WoodLog</li>
                </disallowedThingDefs>
            </defaultIngredientFilter>
        </recipeMaker>
        <tradeTags>
            <li>Astrologer_WeaponMelee</li>
        </tradeTags>
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
            <li Class="CompProperties_Art">
                <nameMaker>NamerArtWeaponMelee</nameMaker>
                <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
                <minQualityForArtistic>Excellent</minQualityForArtistic>
            </li>
        </comps>
    </ThingDef>

    <ThingDef Name="Astro_WeaponRangedBase" Abstract="True" ParentName="Astro_IndustrialWeaponBase">
        <thingCategories>
            <li>LOF_AS_Category_WeaponRanged</li>
        </thingCategories>
        <weaponClasses>
            <li>Ranged</li>
        </weaponClasses>
        <tradeTags>
            <li>LOF_AS_Category_WeaponRanged</li>
        </tradeTags>
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
        </comps>
    </ThingDef>

    <ThingDef Name="Astro_AKAWeaponRangedBase" Abstract="True" ParentName="Astro_WeaponRangedBase">
        <comps Inherit="false">
            <li Class="CompProperties_Forbiddable"/>
            <li Class="CompProperties_Styleable"/>
            <li>
                <compClass>Astrologer.CompEquippable_AKAbility</compClass>
            </li>
            <li>
                <compClass>CompQuality</compClass>
            </li>
        </comps>
    </ThingDef>
</Defs>