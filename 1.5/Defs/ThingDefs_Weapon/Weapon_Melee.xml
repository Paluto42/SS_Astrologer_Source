<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="Astro_WeaponMeleeBase">
        <defName>LOF_CeremonialSword</defName>
        <label>护身剑</label>
        <description>占星师社交用的礼仪剑.</description>
        <graphicData>
            <texPath>Things/Weapons/CeremonialSword</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <!--占位,原版数值-->
        <statBases>
            <WorkToMake>10000</WorkToMake>
            <Mass>2</Mass>
        </statBases>
        <!--equippedStatOffsets>
            <MeleeDodgeChance>10</MeleeDodgeChance>
            <MoveSpeed>0.2</MoveSpeed>
        </equippedStatOffsets-->
        <costList>
            <Gold>1</Gold>
            <Steel>60</Steel>
            <WoodLog>10</WoodLog>
        </costList>
        <recipeMaker>
            <researchPrerequisite>LongBlades</researchPrerequisite>
            <recipeUsers></recipeUsers>
            <skillRequirements>
                <Crafting>5</Crafting>
            </skillRequirements>
        </recipeMaker>
        <!--thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags-->
        <tools>
            <li>
                <label>handle</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>1.5</cooldownTime>
            </li>
            <li>
                <label>point</label>
                <capacities>
                    <li>Stab</li>
                </capacities>
                <power>25</power>
                <cooldownTime>1.75</cooldownTime>
            </li>
            <li>
                <label>edge</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>25</power>
                <cooldownTime>1.75</cooldownTime>
            </li>
        </tools>
    </ThingDef>

    <ThingDef ParentName="Astro_WeaponMeleeBase">
        <defName>LOF_ShockGlove</defName>
        <label>机械冲击手套</label>
        <description>本来是辅助工作的手套。逐渐变为外出游玩时偶遇机械族的无奈之举.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponMelee/Gladius</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <!--占位,原版数值-->
        <statBases>
            <WorkToMake>10000</WorkToMake>
            <Mass>2</Mass>
        </statBases>
        <!--equippedStatOffsets>
            <MeleeDodgeChance>10</MeleeDodgeChance>
            <MoveSpeed>0.2</MoveSpeed>
        </equippedStatOffsets-->
        <costList>
            <Steel>60</Steel>
            <WoodLog>10</WoodLog>
        </costList>
        <recipeMaker>
            <researchPrerequisite>Smithing</researchPrerequisite>
            <recipeUsers></recipeUsers>
            <skillRequirements>
                <Crafting>5</Crafting>
            </skillRequirements>
        </recipeMaker>
        <!--thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags-->
        <tools>
            <li>
                <label>拳击</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>14</power>
                <cooldownTime>1.5</cooldownTime>
                <extraMeleeDamages>
                    <li>
                        <def>EMP</def>
                        <amount>6</amount>
                        <chance>2</chance>
                    </li>
                </extraMeleeDamages>
            </li>
        </tools>
        <comps>
            <li Class="Astrologer.TCP_AddHediff">
                <hediff>LOF_Hediff_Manipulation</hediff>
            </li>
        </comps>
    </ThingDef>

</Defs>