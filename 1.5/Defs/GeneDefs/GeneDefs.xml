<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <GeneDef Name="Astro_BodyGene" Abstract="True">
        <!--geneClass></geneClass-->
        <descriptionHyperlinks></descriptionHyperlinks>
        <biostatCpx>0</biostatCpx>
        <biostatMet>0</biostatMet>
        <selectionWeight>0</selectionWeight>
        <tattoosVisible>false</tattoosVisible>
        <neverGrayHair>true</neverGrayHair>
        <displayOrderInCategory>1</displayOrderInCategory>
        <displayCategory>Astro_GeneCategory</displayCategory>
        <bodyType>Standard</bodyType>
        <beardTagFilter>
            <whitelist>true</whitelist>
            <tags>
                <li>NoBeard</li>
            </tags>
        </beardTagFilter>
        <hairTagFilter>
            <whitelist>true</whitelist>
            <tags>
                <li>LOF_AS_Tag_Style</li>
            </tags>
        </hairTagFilter>
        <exclusionTags>
            <li>Jaw</li>
            <li>Fur</li>
            <li>Nose</li>
            <li>HairStyle</li>
            <li>HeadType</li>
            <li>BodyType</li>
            <li>SkinColorOverride</li>
        </exclusionTags>
        <modExtensions>
            <li Class="Astrologer.Ext_OperatorDef">
                <AKAbilities>
                    <li>LOF_Ability_IncreaseHarvest</li>
                </AKAbilities>
            </li>
        </modExtensions>
    </GeneDef>

    <AbilityDef ParentName="AK_OperatorIDBase">
        <defName>LOF_VAbility_Operator</defName>
        <label>占星</label>
        <description>desc</description>
        <abilityClass>Astrologer.VAB_AstroTracker</abilityClass>
        <iconPath>UI/Element/Arknights</iconPath>
    </AbilityDef>

    <GeneDef ParentName="Astro_BodyGene">
        <defName>LOF_Gene_Main</defName>
        <label>占星师</label>
        <description>占星师种族的核心基因.</description>
        <descriptionHyperlinks>
        </descriptionHyperlinks>
        <iconPath>UI/Icons/Genes/Gene_Sanguine</iconPath>
        <biostatCpx>3</biostatCpx>
        <biostatMet>4</biostatMet>
        <geneClass>Astrologer.Gene_Astrologer</geneClass>
        <statOffsets>
            <ComfyTemperatureMin>-20</ComfyTemperatureMin>
            <ComfyTemperatureMax>20</ComfyTemperatureMax>
        </statOffsets>
        <forcedHeadTypes>
            <li>Astro_Head_B</li>
            <li>Astro_Head_C</li>
            <li>Astro_Head_D</li>
            <li>Astro_Head_E</li>
        </forcedHeadTypes>
        <forcedTraits>
        </forcedTraits>
        <modExtensions>
            <li Class="Astrologer.Ext_AstrologerGene">
                <forcedBodyType>Astro_Body</forcedBodyType>
                <astroAbility>LOF_VAbility_Operator</astroAbility>
                <skinColorOverride>(255, 255, 255)</skinColorOverride>
            </li>
            <li Class="Astrologer.Ext_ForcedHairColor">
                <hairColorOverride>
                    <li>
                        <weight>15</weight>
                        <only>(250, 250, 250)</only>
                    </li>
                    <li>
                        <weight>10</weight>
                        <only>(0.65, 0.65, 0.65)</only>
                    </li>
                    <li>
                        <weight>5</weight>
                        <only>(237, 202, 156)</only>
                    </li>
                </hairColorOverride>
            </li>
        </modExtensions>
    </GeneDef>

    <GeneDef>
        <defName>LOF_Gene_PurpleWink</defName>
        <label>紫色星瞳</label>
        <description>专属瞳色.</description>
        <descriptionHyperlinks>
        </descriptionHyperlinks>
        <iconPath>UI/Icons/Genes/Gene_Sanguine</iconPath>
        <displayCategory>Astro_GeneCategory</displayCategory>
        <displayOrderInCategory>2</displayOrderInCategory>
        <forcedHeadTypes>
            <li>Astro_Head_A</li>
            <li>Astro_Head_F</li>
        </forcedHeadTypes>
        <biostatCpx>1</biostatCpx>
        <biostatMet>1</biostatMet>
        <statOffsets>
        </statOffsets>
        <forcedTraits>
        </forcedTraits>
        <modExtensions>
            <li Class="Astrologer.Ext_ForcedHeadType">
                <forcedHeadType>Astro_Head_F</forcedHeadType>
            </li>
        </modExtensions>
    </GeneDef>

    <GeneDef>
        <defName>LOF_Gene_InsightEye</defName>
        <label>目光闪闪</label>
        <description>基因携带者加命中率,减瞄准时间.</description>
