    <GeneDef>
        <defName>LOF_Gene_MeleeWeak</defName>
        <label>近战苦手</label>
        <description>基因携带者减少近战技能，减近战命中率.</description>
        <iconPath>UI/Icons/Genes/Skills/Melee/poor</iconPath>
        <displayCategory>Astro_GeneCategory</displayCategory>
        <displayOrderInCategory>20</displayOrderInCategory>
        <aptitudes>
            <Melee>-4</Melee>
        </aptitudes>
        <statOffsets>
            <MeleeHitChance>-0.5</MeleeHitChance>
        </statOffsets>
        <biostatMet>-4</biostatMet>
        <biostatCpx>2</biostatCpx>
    </GeneDef>

    <GeneDef>
        <defName>LOF_Gene_StargazingFavor</defName>
        <label>爱好观星</label>
        <description>每天只睡4个小时只为了观星吗...你这家伙</description>
        <iconPath>UI/Icons/Genes/Gene_QuickSleeper</iconPath>
        <displayCategory>Astro_GeneCategory</displayCategory>
        <displayOrderInCategory>30</displayOrderInCategory>
        <statFactors>
            <RestFallRateFactor>0.4</RestFallRateFactor>
        </statFactors>
        <biostatCpx>1</biostatCpx>
        <biostatMet>1</biostatMet>
        <symbolPack>
            <prefixSymbols>
                <li>
                    <symbol>wake</symbol>
                </li>
                <li>
                    <symbol>night</symbol>
                </li>
            </prefixSymbols>
        </symbolPack>
    </GeneDef>

