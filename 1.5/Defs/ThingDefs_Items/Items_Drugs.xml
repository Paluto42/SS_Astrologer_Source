    <ThingDef ParentName="MakeableDrugPillBase">
        <defName>LOF_NanoMechanicalFluid</defName>
        <label>自检纳米机械液</label>
        <description>预防瘟疫,疟疾,昏睡流感,纳米机械感染,金属异形感染.</description>
        <possessionCount>10</possessionCount>
        <descriptionHyperlinks>
            <HediffDef>LOF_NanoFluidHigh</HediffDef>
        </descriptionHyperlinks>
        <graphicData>
            <texPath>Things/Item/Drug/NanoMechanicalFluid</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <socialPropernessMatters>false</socialPropernessMatters>
        <rotatable>false</rotatable>
        <statBases>
            <WorkToMake>600</WorkToMake>
            <MarketValue>18</MarketValue>
            <Mass>0.005</Mass>
        </statBases>
        <techLevel>Industrial</techLevel>
        <ingestible>
            <drugCategory>Medical</drugCategory>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>LOF_NanoFluidHigh</hediffDef>
                    <severity>1.0</severity>
                </li>
            </outcomeDoers>
        </ingestible>
        <recipeMaker>
            <researchPrerequisite>PenoxycylineProduction</researchPrerequisite>
            <recipeUsers>
                <li>DrugLab</li>
            </recipeUsers>
            <displayPriority>2100</displayPriority>
        </recipeMaker>
        <costList>
            <Neutroamine>2</Neutroamine>
        </costList>
        <comps>
            <li Class="CompProperties_Drug">
                <listOrder>1000</listOrder>
                <overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
            </li>
        </comps>
    </ThingDef>

