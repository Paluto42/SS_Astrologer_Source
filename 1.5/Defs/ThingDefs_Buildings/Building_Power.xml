<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="BuildingBase">
        <defName>Astrologer_NightGenerator</defName>
        <label>夜空电机</label>
        <description>收集月光进行发电,在阳光强烈时停止工作.</description>
        <thingClass>Building</thingClass>
        <drawerType>MapMeshAndRealTime</drawerType>
        <!--等待贴图-->
        <graphicData>
            <texPath>Things/Building/Power/Battery</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(2,3)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <castEdgeShadows>true</castEdgeShadows>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <fillPercent>0.5</fillPercent>
        <canOverlapZones>false</canOverlapZones>
        <statBases>
            <MaxHitPoints>300</MaxHitPoints>
            <WorkToBuild>2500</WorkToBuild>
            <Flammability>0.7</Flammability>
        </statBases>
        <tickerType>Normal</tickerType>
        <size>(1,2)</size>
        <building>
            <destroySound>BuildingDestroyed_Metal_Big</destroySound>
        </building>
        <costList>
            <Steel>100</Steel>
            <ComponentIndustrial>3</ComponentIndustrial>
        </costList>
        <comps>
            <li Class="Astrologer.TCP_NightGenerator">
                <compClass>Astrologer.TC_NightGenerator</compClass>
                <skyGlowLowerThan>0.5</skyGlowLowerThan>
                <basePowerConsumption>-1000</basePowerConsumption>
                <transmitsPower>true</transmitsPower>
            </li>
            <li Class="CompProperties_Battery">
                <storedEnergyMax>1800</storedEnergyMax>
                <efficiency>1.0</efficiency>
                <shortCircuitInRain>true</shortCircuitInRain>
                <transmitsPower>true</transmitsPower>
            </li>
            <li Class="CompProperties_Breakdownable"/>
            <li Class="CompProperties_Stunnable">
                <useLargeEMPEffecter>true</useLargeEMPEffecter>
                <empChancePerTick>0.03</empChancePerTick>
                <affectedDamageDefs>
                    <li>EMP</li>
                </affectedDamageDefs>
            </li>
        </comps>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <designationCategory>Power</designationCategory>
        <uiOrder>2100</uiOrder>
        <!--designationHotKey>Misc5</designationHotKey-->
        <constructEffect>ConstructMetal</constructEffect>
        <!--researchPrerequisites>
            <li>SolarPanels</li>
        </researchPrerequisites-->
        <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    </ThingDef>

</Defs>