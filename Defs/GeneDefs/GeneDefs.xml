    <GeneDef>
        <defName>LOF_Gene_FearlessWill</defName>
        <label>无畏意志</label>
        <description>来自群星的指示让占星师们的意志变的更加坚定</description>
        <iconPath>UI/Icons/Genes/Gene_Sanguine</iconPath>
        <displayCategory>Astro_GeneCategory</displayCategory>
        <displayOrderInCategory>6</displayOrderInCategory>
        <prerequisite>LOF_Gene_Main</prerequisite>
        <statFactors>
            <CertaintyLossFactor MayRequire="ludeon.rimworld.ideology">0.5</CertaintyLossFactor>
        </statFactors>
        <statOffsets>
            <MentalBreakThreshold>-0.4</MentalBreakThreshold>
            <PainShockThreshold>0.4</PainShockThreshold>
        </statOffsets>
        <biostatCpx>1</biostatCpx>
        <biostatMet>1</biostatMet>
    </GeneDef>

    <GeneDef>
        <defName>LOF_Gene_StarSeeker</defName>
        <label>群星探索者</label>
        <description>desc.</description>
        <iconPath>UI/Icons/Genes/StarSeeker</iconPath>
        <displayCategory>Astro_GeneCategory</displayCategory>
        <displayOrderInCategory>3</displayOrderInCategory>
        <prerequisite>LOF_Gene_Main</prerequisite>
        <aptitudes>
            <Intellectual>4</Intellectual>
        </aptitudes>
        <statFactors>
            <GlobalLearningFactor>0.25</GlobalLearningFactor>
        </statFactors>
        <biostatCpx>1</biostatCpx>
        <biostatMet>1</biostatMet>
    </GeneDef>

</Defs>