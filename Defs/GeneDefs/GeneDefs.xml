<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <GeneDef Name="Astro_BodyGene" Abstract="True">
        <descriptionHyperlinks></descriptionHyperlinks>
        <biostatCpx>0</biostatCpx>
        <biostatMet>0</biostatMet>
        <selectionWeight>0</selectionWeight>
        <tattoosVisible>false</tattoosVisible>
        <neverGrayHair>true</neverGrayHair>
        <displayCategory>Astro_GeneCategory</displayCategory>
        <beardTagFilter>
            <whitelist>true</whitelist>
            <tags>
                <li>NoBeard</li>
            </tags>
        </beardTagFilter>
        <hairTagFilter>
            <whitelist>true</whitelist>
            <tags>
                <li>LOF_AS_Tag_Style</li>
            </tags>
        </hairTagFilter>
        <exclusionTags>
            <li>Jaw</li>
            <li>Fur</li>
            <li>Nose</li>
            <li>HairStyle</li>
            <li>HeadType</li>
            <li>BodyType</li>
            <li>SkinColorOverride</li>
        </exclusionTags>
        <modExtensions>
        </modExtensions>
    </GeneDef>

    <GeneDef ParentName="Astro_BodyGene">
        <defName>LOF_Gene_Main</defName>
        <geneClass>Astrologer.Gene_Astrologer</geneClass>
        <label>占星师</label>
        <description>占星师种族的核心基因.</description>
        <descriptionHyperlinks></descriptionHyperlinks>
        <iconPath>UI/Icons/Genes/Stargazing</iconPath>
        <displayOrderInCategory>1</displayOrderInCategory>
        <biostatCpx>2</biostatCpx>
        <biostatMet>-1</biostatMet>
        <aptitudes>
            <Shooting>4</Shooting>
            <Mining>-3</Mining>
            <Cooking>-3</Cooking>
        </aptitudes>
        <capMods>
            <li>
                <capacity>Sight</capacity>
                <offset>0.2</offset>
            </li>
        </capMods>
        <statOffsets>
            <ResearchSpeed>0.25</ResearchSpeed>
            <ComfyTemperatureMin>-20</ComfyTemperatureMin>
            <ComfyTemperatureMax>20</ComfyTemperatureMax>
        </statOffsets>
        <forcedHeadTypes>
            <li>Astro_Head_B</li>
            <li>Astro_Head_C</li>
            <li>Astro_Head_D</li>
            <li>Astro_Head_E</li>
        </forcedHeadTypes>
        <!--forcedTraits>
            <li>
                <def>LOF_Trait_Sight</def>
            </li>
        </forcedTraits-->
    </GeneDef>

    <GeneDef>
        <defName>LOF_Gene_PurpleWink</defName>
        <label>紫色星瞳</label>
        <description>专属瞳色.</description>
        <descriptionHyperlinks></descriptionHyperlinks>
        <iconPath>UI/Icons/Genes/InsightEye</iconPath>
        <displayCategory>Astro_GeneCategory</displayCategory>
        <displayOrderInCategory>7</displayOrderInCategory>
        <prerequisite>LOF_Gene_Main</prerequisite>
        <forcedHeadTypes>
            <li>Astro_Head_A</li>
            <li>Astro_Head_F</li>
        </forcedHeadTypes>
        <statOffsets></statOffsets>
        <forcedTraits></forcedTraits>
        <modExtensions>
            <li Class="Astrologer.Ext_ForcedHeadType">
                <forcedHeadType>Astro_Head_F</forcedHeadType>
            </li>
        </modExtensions>
    </GeneDef>

    <GeneDef>
        <defName>LOF_Gene_InsightEye</defName>
        <label>目光闪闪</label>
        <description>encoded gene - implanting this gene will automatically submit an application for enlistment to the Star Empire Armed Forces, effective immediately.</description>
        <iconPath>UI/Icons/Genes/InsightEye</iconPath>
        <displayCategory>Astro_GeneCategory</displayCategory>
        <displayOrderInCategory>5</displayOrderInCategory>
        <prerequisite>LOF_Gene_Main</prerequisite>
        <statOffsets>
            <ShootingAccuracyPawn>5.0</ShootingAccuracyPawn>
            <AimingDelayFactor>-0.5</AimingDelayFactor>
        </statOffsets>
        <biostatCpx>1</biostatCpx>
        <biostatMet>1</biostatMet>
        <!--symbolPack>
            <prefixSymbols>
                <li><symbol>puno</symbol></li>
                <li><symbol>weak</symbol></li>
                <li><symbol>poke</symbol></li>
                <li><symbol>flab</symbol></li>
                <li><symbol>anemo</symbol></li>
            </prefixSymbols>
        </symbolPack-->
    </GeneDef>

    <GeneDef>
        <defName>LOF_Gene_MeleeWeak</defName>
        <label>近战苦手</label>
        <description>基因携带者减少近战技能，减近战命中率.</description>
        <iconPath>UI/Icons/Genes/MeleeWeak</iconPath>
        <displayCategory>Astro_GeneCategory</displayCategory>
        <displayOrderInCategory>4</displayOrderInCategory>
        <prerequisite>LOF_Gene_Main</prerequisite>
        <aptitudes>
            <Melee>-3</Melee>
        </aptitudes>
        <statOffsets>
            <MeleeHitChance>-0.5</MeleeHitChance>
        </statOffsets>
        <biostatMet>1</biostatMet>
        <biostatCpx>1</biostatCpx>
    </GeneDef>

    <GeneDef>
        <defName>LOF_Gene_StargazingFavor</defName>
        <label>爱好观星</label>
        <description>每天只睡4个小时只为了观星吗...你这家伙</description>
        <iconPath>UI/Icons/Genes/Stargazing</iconPath>
        <displayCategory>Astro_GeneCategory</displayCategory>
        <displayOrderInCategory>2</displayOrderInCategory>
        <prerequisite>LOF_Gene_Main</prerequisite>
        <statFactors>
            <RestFallRateFactor>0.4</RestFallRateFactor>
        </statFactors>
        <biostatCpx>1</biostatCpx>
        <biostatMet>1</biostatMet>
        <symbolPack>
            <prefixSymbols>
                <li>
                    <symbol>wake</symbol>
                </li>
                <li>
                    <symbol>night</symbol>
                </li>
            </prefixSymbols>
        </symbolPack>
    </GeneDef>

