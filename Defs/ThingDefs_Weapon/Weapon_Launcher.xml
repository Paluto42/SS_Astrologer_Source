<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="Astro_WeaponRangedBase">
        <defName>LOF_Weapon_TandemHEATLauncher</defName>
        <label>串联破甲战斗部发射器</label>
        <description>一次性反重甲武器，用完弃用.</description>
        <tickerType>Normal</tickerType>
        <graphicData>
            <texPath>Things/Weapons/LOF_TandemHEATLauncher</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.125</drawSize>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <weaponClasses>
            <li>RangedHeavy</li>
        </weaponClasses>
        <weaponTags>
            <li>LOF_WeaponRanged</li>
        </weaponTags>
        <!--占位,原版数值-->
        <statBases>
            <WorkToMake>10500</WorkToMake>
            <Mass>6</Mass>
            <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>40</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <recipeMaker>
            <researchPrerequisite>LOF_Research_BaseGun</researchPrerequisite>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
        </recipeMaker>
        <verbs>
            <li>
                <verbClass>Verb_ShootOneUse</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <!--应该写个新的弹药种类-->
                <defaultProjectile>LOF_Bullet_TandemHEAT</defaultProjectile>
                <ai_IsBuildingDestroyer>false</ai_IsBuildingDestroyer>
                <forcedMissRadius>0.1</forcedMissRadius>
                <warmupTime>2.5</warmupTime>
                <range>30</range>
                <burstShotCount>1</burstShotCount>
                <soundCast>InfernoCannon_Fire</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                </targetParams>
                <muzzleFlashScale>14</muzzleFlashScale>
            </li>
        </verbs>
        <comps>
            <li Class="CompProperties_Explosive">
                <damageAmountBase>150</damageAmountBase>
                <explosiveRadius>2</explosiveRadius>
                <explosiveDamageType>Bomb</explosiveDamageType>
                <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
            </li>
        </comps>
    </ThingDef>

