    <HediffDef>
        <defName>LOF_Hediff_Detoxifier</defName>
        <label>Survival Combat Unit - Metabolic Boost</label>
        <description>Through advanced nanotechnology,it effectively removes harmful substances from the blood.</description>
        <descriptionHyperlinks>
            <ThingDef>LOF_Apparel_LightArmor</ThingDef>
        </descriptionHyperlinks>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(0.6, 0.6, 1.0)</defaultLabelColor>
        <isBad>false</isBad>
        <allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
        <everCurableByItem>false</everCurableByItem>
        <maxSeverity>1</maxSeverity>
        <stages>
            <li>
                <becomeVisible>true</becomeVisible>
                <capMods>
                    <li>
                        <capacity>BloodFiltration</capacity>
                        <offset>0.2</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>LOF_Hediff_Manipulation</defName>
        <label>Manual Dexterity</label>
        <description>with mechanical gloves,work efficiency is higher</description>
        <descriptionHyperlinks>
            <ThingDef>LOF_Weapon_ShockGlove</ThingDef>
        </descriptionHyperlinks>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(0.6, 0.6, 1.0)</defaultLabelColor>
        <isBad>false</isBad>
        <allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
        <everCurableByItem>false</everCurableByItem>
        <maxSeverity>1</maxSeverity>
        <stages>
            <li>
                <becomeVisible>false</becomeVisible>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.2</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>LOF_Hediff_IncreaseHarvest</defName>
        <label>Harvest Longing</label>
        <description>increases crop and butcher yields,surgery success rate,high-quality craft chance,and shooting accuracy for 1 day.\nfood consumption rate is multiplied by 200%.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(0.6, 0.6, 1.0)</defaultLabelColor>
        <isBad>false</isBad>
        <allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
        <everCurableByItem>false</everCurableByItem>
        <maxSeverity>2.4</maxSeverity>
        <stages>
            <li>
                <statOffsets>
                    <PlantHarvestYield>0.5</PlantHarvestYield>
                    <ButcheryFleshEfficiency>0.5</ButcheryFleshEfficiency>
                    <MedicalSurgerySuccessChance>0.5</MedicalSurgerySuccessChance>
                    <ShootingAccuracyPawn>0.5</ShootingAccuracyPawn>
                    <MaxNutrition>0.5</MaxNutrition>
                </statOffsets>
            </li>
        </stages>
        <comps>
            <li Class="Astrologer.Ability.HCP_IncreastHarvest"/>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-2.4</severityPerDay>
            </li>
        </comps>
    </HediffDef>

    <HediffDef>
        <defName>LOF_Hediff_DecreasePsychicSense</defName>
        <label>Reduced Psychic Sensitivity</label>
        <description>decreases psychic sensitivity for a short period of time.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(0.6, 0.6, 1.0)</defaultLabelColor>
        <isBad>false</isBad>
        <allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
        <everCurableByItem>false</everCurableByItem>
        <maxSeverity>198</maxSeverity>
        <stages>
            <li>
                <statOffsets>
                    <PsychicSensitivity>-1.0</PsychicSensitivity>
                </statOffsets>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-3280</severityPerDay>
            </li>
        </comps>
    </HediffDef>

    <HediffDef ParentName="InjuryBase">
        <defName>LOF_Hediff_NebulaRay</defName>
        <label>Nebula Ray</label>
        <labelNoun>Nebula Ray</labelNoun>
        <description>Bleeding Wound.</description>
        <everCurableByItem>false</everCurableByItem>
        <maxSeverity>1</maxSeverity>
        <comps>
            <li Class="HediffCompProperties_Infecter">
                <infectionChance>0.15</infectionChance>
            </li>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-1</severityPerDay>
            </li>
        </comps>
        <injuryProps>
            <painPerSeverity>0.0125</painPerSeverity>
            <averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
            <bleedRate>0.10</bleedRate>
            <canMerge>false</canMerge>
            <destroyedLabel>Shot off</destroyedLabel>
            <destroyedOutLabel>Shot out</destroyedOutLabel>
        </injuryProps>
    </HediffDef>

    <HediffDef>
        <defName>LOF_Hediff_AnchoredStance</defName>
        <label>Anchored Stance</label>
        <description>dodge chance is reduced to 0% for a short period of time.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(0.9, 1.0, 0.35)</defaultLabelColor>
        <isBad>false</isBad>
        <allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
        <everCurableByItem>false</everCurableByItem>
        <maxSeverity>1</maxSeverity>
        <stages>
            <li>
                <statFactors>
                    <MeleeDodgeChance>0</MeleeDodgeChance>
                </statFactors>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-12</severityPerDay>
            </li>
        </comps>
    </HediffDef>

    <HediffDef>
        <defName>LOF_Hediff_NanoFluid</defName>
        <hediffClass>Hediff_High</hediffClass>
        <label>nanomachine self-inspection</label>
        <description>nanomachines flowing in the blood can prevent infection from most contagious diseases.</description>
        <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
        <scenarioCanAdd>true</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.18</severityPerDay>
                <showHoursToRecover>true</showHoursToRecover>
            </li>
        </comps>
        <stages>
            <li>
                <makeImmuneTo>
                    <li>Malaria</li>
                    <li>SleepingSickness</li>
                    <li>Plague</li>
                    <li>FibrousMechanites</li>
                    <li>SensoryMechanites</li>
                    <li MayRequire="Ludeon.Rimworld.Anomaly">MetalhorrorImplant</li>
                </makeImmuneTo>
            </li>
        </stages>
    </HediffDef>

</Defs>