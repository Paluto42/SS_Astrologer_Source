<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!--串联破甲战斗部发射器-->
    <ThingDef ParentName="Astrologer_WeaponRangedBase">
        <defName>Astrologer_TandemHEATLauncher</defName>
        <label>串联破甲火箭发射器</label>
        <description>一次性反重甲武器，用完弃用.</description>
        <tickerType>Normal</tickerType>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponRanged/DoomsdayLauncher</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Shotgun</soundInteract>
        <weaponClasses>
            <li>RangedHeavy</li>
        </weaponClasses>
        <weaponTags>
            <li>Astrologer_WeaponRanged</li>
        </weaponTags>
        <!--占位,原版数值-->
        <statBases>
            <WorkToMake>10500</WorkToMake>
            <Mass>6</Mass>
            <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>40</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <recipeMaker>
            <!--researchPrerequisite>GasOperation</researchPrerequisite-->
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
            <skillRequirements>
                <Crafting>5</Crafting>
            </skillRequirements>
        </recipeMaker>
        <thingSetMakerTags>
            <li>SingleUseWeapon</li>
            <li>RewardStandardLowFreq</li>
        </thingSetMakerTags>
        <verbs>
            <li>
                <verbClass>Verb_ShootOneUse</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <!--应该写个新的弹药种类-->
                <defaultProjectile>Astrologer_Bullet_TandemHEAT</defaultProjectile>
                <forcedMissRadius>0.9</forcedMissRadius>
                <ai_IsBuildingDestroyer>false</ai_IsBuildingDestroyer>
                <warmupTime>2.5</warmupTime>
                <range>40</range>
                <burstShotCount>1</burstShotCount>
                <soundCast>InfernoCannon_Fire</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                </targetParams>
                <muzzleFlashScale>14</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>11.7</power>
                <cooldownTime>2.6</cooldownTime>
            </li>
        </tools>
        <comps>
            <li>
                <compClass>CompEquippable</compClass>
            </li>
            <li Class="CompProperties_Explosive">
                <damageAmountBase>150</damageAmountBase>
                <explosiveRadius>2</explosiveRadius>
                <explosiveDamageType>Bomb</explosiveDamageType>
                <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
            </li>
        </comps>
    </ThingDef>
    <ThingDef ParentName="BaseBullet">
        <defName>Astrologer_Bullet_TandemHEAT</defName>
        <label>串联破甲火箭弹</label>
        <graphicData>
            <texPath>Things/Projectile/Rocket_Big</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <thingClass>Projectile_DoomsdayRocket</thingClass>
        <projectile>
            <damageDef>Bullet</damageDef>
            <damageAmountBase>450</damageAmountBase>
            <armorPenetrationBase>1.2</armorPenetrationBase>
            <explosionRadius>2</explosionRadius>
            <speed>65</speed>
        </projectile>
    </ThingDef>

</Defs>