        <defName>Astrologer_PiercingShotgun</defName>
        <label>破甲霰弹枪</label>
        <description>这是一把开罐器.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponRanged/Shotgun</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Shotgun</soundInteract>
        <weaponClasses>
            <li>Ranged</li>
        </weaponClasses>
        <weaponTags>
            <li>Astrologer_WeaponRanged</li>
        </weaponTags>
        <!--占位,原版数值-->
        <statBases>
            <WorkToMake>12000</WorkToMake>
            <Mass>3.4</Mass>
            <AccuracyTouch>0.80</AccuracyTouch>
            <AccuracyShort>0.87</AccuracyShort>
            <AccuracyMedium>0.77</AccuracyMedium>
            <AccuracyLong>0.64</AccuracyLong>
            <RangedWeapon_Cooldown>1.25</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>60</Steel>
            <ComponentIndustrial>3</ComponentIndustrial>
        </costList>
        <recipeMaker>
            <!--researchPrerequisite>GasOperation</researchPrerequisite-->
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
            <skillRequirements>
                <Crafting>5</Crafting>
            </skillRequirements>
            <displayPriority>430</displayPriority>
        </recipeMaker>
        <thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <!--应该写个新的弹药种类-->
                <defaultProjectile>Bullet_Shotgun</defaultProjectile>
                <warmupTime>0.9</warmupTime>
                <range>15.9</range>
                <soundCast>Shot_Shotgun</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
